{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": ".",
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  "exclude": ["node_modules", "dist", "build", "**/build", "**/dist", "**/node_modules", "cdk.out", "**/cdk.out"]
}
